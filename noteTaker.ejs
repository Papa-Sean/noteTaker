<html>
    <head>
        <title>noteTaker by Papa</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    </head>

    <body>
        <div class = "container">
            <div class = "jumbotron">
                <h1>noteTaker App</h1>
                <form actions = "addNotes" method = "POST">
                    <div class = "form-group">
                        <textarea class = "form-control" type = "text" name = "newNote" id = "newNote" placeholder="Add a note...  or don't...  It's your world"></textarea>
                        <button class="btn btn-success" type="submit">Add Note</button>
                    </div>
                </form>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">NOTES</th>
                            <th scope="col">ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% note.map((i, index) => { %>
                            <tr>
                              <th scope="row"><%= index+1 %></th>
                                    <td><%= i.body %></td>
                                    <td>
                                      <form action='<%= /deleteNote/ +i.id%>' method="POST">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                      </form>
                                    </td>
                                    </tr>
                                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="footer">
            <p>Copyright &copy PapacastNetwork</p>
          </div>
          <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
          <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    </body>
</html>